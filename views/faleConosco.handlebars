<h1 style="color: #333; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; margin: 20px">Lista de Mensagens</h1>

<style>
    body{
        margin: 0 
    }
</style>

{{#if mensagens}}
<table style="width: 100%; margin-top: 20px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); border-radius: 8px; overflow: hidden; background-color: white;">
  <thead>
    <tr style="background-color: #f0f0f0;">
      <th style="padding: 12px;">Nome</th>
      <th style="padding: 12px;">Data</th>
      <th style="padding: 12px;">E-mail</th>
      <th style="padding: 12px;">Mensagem</th>
      <th style="padding: 12px;">Ações</th>
    </tr>
  </thead>
  <tbody>
    {{#each mensagens}}
    <tr style="border-bottom: 1px solid #eee;" onmouseover="this.style.backgroundColor='#f1f7ff'" onmouseout="this.style.backgroundColor='white'">
      <td style="padding: 12px;">{{nome}}</td>
      <td style="padding: 12px;">{{dataFormatada}}</td>
      <td style="padding: 12px;">{{email}}</td>
      <td style="padding: 12px;">{{mensagem}}</td>
      <td style="padding: 12px;">
        <a href="/faleConosco/edit/{{id}}" style="
        background-color: #ffc107;
        padding: 6px 12px;
        border-radius: 4px;
        text-decoration: none;
        color: #333;">Editar</a>

        <form action="/faleConosco/delete/{{id}}" method="POST" style="display:inline;">
          <button type="submit" onclick="return confirm('Tem certeza?')" style="
        background-color: #dc3545; 
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;">Excluir</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{else}}
<p style="color: #777; margin: 20px; ">Nenhuma mensagem recebida.</p>
{{/if}}

<p>
  <a href="/faleConosco/new" style="
      display: inline-block;
      padding: 10px 18px;
      background-color: #28a745;
      color: white;
      border-radius: 5px;
      text-decoration: none;
      font-weight: 500;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0px 20px;">
      Nova Mensagem</a>
</p>
